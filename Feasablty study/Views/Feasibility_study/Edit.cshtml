@model Feasablty_study.Models.Feasibility_study

@{
    ViewData["Title"] = "Edit";
}

<h1> تعديل البيانات</h1>

<hr />

<div class="authentication-wrapper authentication-basic container-p-y">
        <div class="authentication-inner py-4">
          <div class="card">
            <div class="card-body">
              <div class="user-avatar-section">
                  <div class="d-flex flex-column align-items-center">
                      <img class="img-fluid rounded my-4" src="../../assets/img/avatars/Edit.png" height="110" width="110" alt="User avatar">
                         <div class="user-info text-center">
                        <h4 class="border-bottom pb-2 mb-4">تعديل بيانات الدراسة</h4>
                        </div>
                       </div>
                      </div>
                      <hr/>
    <div class="col-md">

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ProjectName" class="form-label"> اسم المشروع</label>
                <input asp-for="ProjectName" class="form-control" />
                <span asp-validation-for="ProjectName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="form-label"> وصف المشروع</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProjectLocation" class="form-label">موقع المشروع</label>
                <input asp-for="ProjectLocation" class="form-control" />
                <span asp-validation-for="ProjectLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProjectType" class="form-label">نوع المشروع</label>
                <input asp-for="ProjectType" class="form-control" />
                <span asp-validation-for="ProjectType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProjectDate" class="form-label">تاريخ بداية التنفيذ</label>
                <input asp-for="ProjectDate" class="form-control" />
                <span asp-validation-for="ProjectDate" class="text-danger"></span>
            </div>
             <div class="form-group">
               <label class="form-label" for="ContactNumber">رقم التواصل</label>
                   <input asp-for="ContactNumber" class="form-control" />
                <span asp-validation-for="ContactNumber" class="text-danger"></span>
            </div>
            <hr/>
                <div class="d-flex justify-content-center pt-3">
                <input type="submit" value="تعديل البيانات" class="btn btn-warning d-grid w-50" />|
                <a class="btn btn-label-success d-grid w-50" asp-action="Index">عودة للقائمة👈  </a>
            </div>
        </form>           
        </div>
         </div>
          </div>
            </div>
              </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}